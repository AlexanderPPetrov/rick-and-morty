{
  "name": "rick-and-morty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "yarn graphql:codegen && craco start",
    "build": "yarn graphql:codegen && craco build",
    "test": "yarn graphql:codegen && craco test",
    "eject": "react-scripts eject",
    "lint": "eslint --fix --ext .js,.ts,.tsx .",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "generate:icons": "svgr -d src/components/shared/svg src/assets/svg"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@craco/craco": "^6.4.3",
    "@testing-library/jest-dom": "^5.14.1",
