    "@testing-library/user-event": "^13.2.1",
    "antd": "^4.19.3",
    "craco-alias": "^3.0.1",
    "craco-less": "^2.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "graphql": "^16.3.0",
    "react": "^18.0.0",
    "react-device-detect": "^2.1.2",
    "react-dom": "^18.0.0",
    "react-query": "^3.34.19",
    "react-router-dom": "^6.2.2",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/fragment-matcher": "^3.2.1",
